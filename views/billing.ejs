<%- include('./share/top.ejs') %>
<h2 class="">Dashboard</h2>
<div class="row row-cards mb-3">
    <div class="col-6">
        <div class="card card-sm card-borderless">
            <div class="card-body">
                <div class="subheader">Balance</div>
                <span id="balance"><span class="placeholder">0</span> credits</span><br />
                <span id="euro" class="text-secondary"><span class="placeholder">0.000000000000000000</span> credits</span>
            </div>
        </div>
    </div>

    <div class="col-6">
        <div class="card card-sm card-borderless">
            <div class="card-body">
                <a href="/api/depositlink" class="btn btn-primary" style="width: 100%;">Deposit via Sellix</a>
                <i>Currently only Litecoin (LTC) is supported.</i>
            </div>
        </div>
    </div>
</div>
<h3>Recent deposits</h3>
<div class="card mb-2">
    <div class="card-body">
        

        <div class="table-responsive">
            <table class="table table-vcenter">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody id="deposits">
                
              </tbody>
            </table>
          </div>
          


    </div>
</div>
<%- include('./share/bottom.ejs') %>